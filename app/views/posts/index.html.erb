<%= render 'shared/dbook_nav' %>

<%= render 'shared/header' %>


<div class="row">
  <%= render 'timeline_sidebar' %>

<div class="col-sm-8">

<%= render 'new_post' if @user == current_user %>

    
      <% @user.posts.each do |post| %>
        <section class="row">
          <section class="timeline-content col-xs-11 col-xs-offset-1">

         <div class="poster">
             <img src="images/icon_photo_small.png">
             <div class="poster-name">
               <%= link_to post.user.first_name, about_user_path(post.user) %>
               <span>Posted on <%= post.created_at %></span>              
             </div>

         </div>
             <p><%= post.content %></p>
         </section>
         <div class="post-bar col-xs-11 col-xs-offset-1">
            <%= link_to 'Like' %>
            <%= link_to 'Comment' %>
            <%= link_to 'Delete', user_post_path(@user, post), method: :delete, data: { confirm: 'Are you sure?' }, class: 'pull-right' %>
         </div>
       </section>
     </section>   

      <% end %>
    



